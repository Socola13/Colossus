<%# Stats %>
<% let useramnt = 0; bot.guilds.forEach(g => { useramnt += g.memberCount; }); %>
<section class="hero is-black is-bold" id="stats">
  <div class="hero-body">
    <div class="container">
      <div class="columns has-text-centered">
        <div class="column">
          <span class="icon is-large"><i class="fas fa-comment-alt fa-3x"></i></span>
          <p class="subtitle"><%= bot.guilds.size %> servers</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fas fa-users fa-3x"></i></span>
          <p class="subtitle"><%= useramnt %> users</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fas fa-stream fa-3x"></i></span>
          <p class="subtitle"><%= bot.commands.length %> commands</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fas fa-clock fa-3x"></i></span>
          <p class="subtitle"><%= format.uptime(process.uptime()); %></p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fas fa-wifi fa-3x"></i></span>
          <p class="subtitle"><%= bot.shards.get(0).latency %> ms</p>
        </div>
      </div>
    </div>
  </div>
</section>

